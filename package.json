{
  "name": "simple-calendar-app",
  "version": "1.0.0",
  "description": "A simple cross-platform desktop calendar app built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-packager . simple-calendar --platform=win32 --arch=x64 --out=dist/",
    "build-mac": "electron-packager . simple-calendar --platform=darwin --arch=x64 --out=dist/"
  },
  "keywords": ["electron", "calendar", "desktop-app"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-packager": "^15.5.1"
  }
}